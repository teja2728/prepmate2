{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "^/api/(.*)$",
      "dest": "/api/$1"
    },
    {
      "src": "^(?!/api/).*",
      "dest": "/index.html"
    }
  ],
  "crons": [
    {
      "path": "/api/cron-daily",
      "schedule": "0 0 * * *"
    }
  ]
}
