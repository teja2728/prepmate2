          }
        },
        {
          "name": "Generate Learning Resources",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"jdText\": \"We are looking for a Software Engineer with experience in JavaScript, React, Node.js, MongoDB, and AWS.\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/generate/resources",
              "host": ["{{base_url}}"],
              "path": ["api", "generate", "resources"]
            }
          }
        }
      ]
    },
    {
      "name": "Admin",
      "item": [
        {
          "name": "Get LLM Logs",
          "request": {
