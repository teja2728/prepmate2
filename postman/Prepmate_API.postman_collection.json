{
  "info": {
    "name": "Prepmate API",
    "description": "MERN stack placement trainer web app using Gemini API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/register",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "register"]
            }
          }
        },
        {
          "name": "Login User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/login",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "login"]
            }
          }
        },
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/auth/me",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "me"]
            }
          }
        }
      ]
    },
    {
      "name": "Resume Management",
      "item": [
        {
          "name": "Upload Resume",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "resumeText",
                  "value": "John Doe\nSoftware Engineer\nEmail: john@example.com\n\nSkills:\n- JavaScript\n- React\n- Node.js\n- MongoDB\n\nExperience:\nSoftware Engineer at Tech Corp (2020-2023)\n- Developed web applications using React and Node.js\n- Collaborated with cross-functional teams\n\nEducation:\nBachelor of Computer Science, University of Tech (2020)",
                  "type": "text"
                },
                {
                  "key": "jdText",
                  "value": "We are looking for a Software Engineer with experience in JavaScript, React, and Node.js. The ideal candidate should have experience with web development and database management.",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/api/user/resume",
              "host": ["{{base_url}}"],
              "path": ["api", "user", "resume"]
            }
          }
        },
        {
          "name": "Get All Resumes",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/user/resume",
              "host": ["{{base_url}}"],
              "path": ["api", "user", "resume"]
            }
          }
        },
        {
          "name": "Get Resume by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/user/resume/{{resume_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "user", "resume", "{{resume_id}}"]
            }
          }
        },
        {
          "name": "Delete Resume",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/user/resume/{{resume_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "user", "resume", "{{resume_id}}"]
            }
          }
        }
      ]
    },
    {
      "name": "AI Generation",
      "item": [
        {
          "name": "Generate Interview Questions",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"resumeId\": \"{{resume_id}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/generate/questions",
              "host": ["{{base_url}}"],
              "path": ["api", "generate", "questions"]
