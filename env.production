# Prepmate - Production Environment Variables
# Copy this file to .env and update with your production values

# Database
MONGO_URI=mongodb://localhost:27017/prepmate
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/prepmate

# JWT Secret (generate a strong secret for production)
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production

# Gemini API Key (get from Google AI Studio)
GEMINI_API_KEY=your-gemini-api-key-here

# Server Configuration
PORT=5000
NODE_ENV=production

# Frontend URL (update for your domain)
CLIENT_URL=http://localhost:3000

# Optional: Admin user email (for admin access)
ADMIN_EMAIL=admin@prepmate.com



